#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient



<fscreen>
	canvas.before:
		Color: 
			rgba: 1 ,1, 1, 1

		Rectangle:
			size: root.size
			pos: 0, 0

	GridLayout:
		cols: 1 
		spacing: 30
		size: root.width*0.7, root.height*0.325
		pos: root.width*0.2, root.height*0.5

		SupperLabel:
			id: lbl
			color: 0, 0, 0, 1
			text: 'These are Supper Widgets'
			bold: True
			gr_left: '#ffffff'        			#### this is gradient color left
			gr_right: '#ffffff'
			border_width: 2
			border_color: [0, 0, 0, 0]


		SupperTextinput:
			id: user_input
			icon_source: 'icons/user.png'
			hint_text: 'Enter Username'
			gr_left: '#5ef787'        			#### this is gradient color left
			gr_right: '#69ffe1'		  			#### this is gradient color right
			icon_offset: 100          			#### how left is the icon 
			underline_width: 1        			####  the width of the underline
			line_h: 15                			####  the height of the underline
			border_width: 1
			border_color: [0, 0, 0, 1]


		SupperTextinput:
			id: mail_input
			icon_source: 'icons/mail.png'   	### this is the icon displayed left to text input
			hint_text: 'Enter Email'
			gr_left: '#7afa9d'
			gr_right: '#83fce4'
			icon_offset: 100
			underline_width: 1
			line_h: 15
			border_width: 1
			border_color: [0, 0, 0, 1]


		SupperTextinput:
			id: phone_input
			icon_source: 'icons/phone.png'
			hint_text: 'Enter phone Number'
			gr_left: '#9cf7b5'
			gr_right: '#97fce8'
			icon_offset: 100	
			underline_width: 1
			line_h: 15
			border_width: 1
			border_color: [0, 0, 0, 1]

		SupperTextinput:
			id: pass_input
			icon_source: 'icons/pass.png'
			hint_text: 'Enter Password'
			gr_left: '#b7f7c9'
			gr_right: '#aef5e7'
			
			icon_offset: 100
			underline_width: 1
			line_h: 15
			border_width: 1
			border_color: [0, 0, 0, 1]

		SupperButton:
			text: 'Button'
			gr_left: '#b7f7c9'
			gr_right: '#aef5e7'
			border_width: 1
			border_color: [0, 0, 0, 1]
			on_press: root.modify_lbl()

